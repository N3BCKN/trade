<section id="signup_panel">
 <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto py-3">

        <div class="card card-signin my-5">
          <div class="card-body">
            <h2 class="card-title text-center py-2">Create your account on Trade</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
              <div class="form-label-group">
                <label for="loginEmail">Email:</label>
                 <%= f.email_field :email, autofocus: true, autocomplete: "email", :id=>"loginEmail",:class=>"form-control", :placeholder=>"Email address", :required=>true %>
              </div>
              <div class="form-label-group">
                <label for="companyName">Your Company Name:</label>
                 <%= f.text_field :user_name, autofocus: true, autocomplete: "email", :id=>"companyName",:class=>"form-control", :placeholder=>"Company", :required=>true %>
              </div>
              <br>
              <div class="form-label-group">
                <label for="password">Password:</label>
                 <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", :class=>"form-control", :id=>"password", :placeholder=>"Password", :required=>true %>
              </div>
              <div class="form-label-group">
                <label for="passwordConfirm">Confirm Password:</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control", :id=>"passwordConfirm", :placeholder=>"Password Confirmation", :required=>true %>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign Up</button>
              <hr class="my-4">

            <%= render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>