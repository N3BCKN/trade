<h2 class="text-center">Products from category: <%= params[:category].capitalize %> </h2>

<% if @leads.count > 0 %>
<div class="text-center">
	<h2>All Products</h2>
	<% @leads.each do |lead| %>
	<h2><%= link_to lead.title, lead_path(lead) %></h2>
	<p><%= lead.description %></p>
	<% end %>
	<br>
	<%= paginate @leads %>
</div>
<% else %>
<p class="text-center" >No products within this category... yet</p>
<% end %>