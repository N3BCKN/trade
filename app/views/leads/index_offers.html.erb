<% content_for(:title, "Offers")%>
<div class="text-center">
	<h2>Matched Offers:</h2>
	<% @leads.each do |lead| %>
	<h2><%= link_to lead.title, lead_path(lead._id) %> </h2>
	<h4>By <%= link_to lead.user.user_name, contact_path(lead.user.id) %></h4>
	<p><%= lead.description %></p>
	<hr>
	<% end %>
	<%= paginate @leads %>
</div>