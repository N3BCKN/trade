<% content_for(:title, "Offers")%>
<section id="product-index" class="py-5">
	<div id="search-bar" class="py-3"> 
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<%= form_tag(products_path, method: :get) do %>
					<div class="input-group mb-3">
					  <%= text_field_tag :q, nil, :class =>"form-control border-info", :value => params[:q] %>
					  <div class="input-group-append">
					   <%= submit_tag 'Find Offers', :class=>"btn btn-info" %>
					  </div>
					</div>
				<% end %>
				<div class="text-center">
				<span class="d-lg-none d-md-inline display-4" data-toggle="collapse" href="#collapseFilter" role="button" aria-expanded="false" aria-controls="collapseExample">
					<i class="fas fa-arrow-down"></i>
					Filters
				</span>
				</div>
			</div>
		</div>
	
		<div class="collapse" id="collapseFilter">
			<%= form_tag(products_path, method: :get) do %>
				<%= render "shared/modal_Filters" %>
  			<% end %>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-lg-3">
				<div class="container d-none d-lg-inline">
					<h3>Filter by:</h3>
					<%= form_tag(products_path, method: :get) do %>
						<%= render "shared/lead_Filters", countries: @countries,
						categories: @categories, query: params[:q] %>
					<% end %>
				</div>	
			</div>
			<div class="col-lg-9 col-md-12">
				<div class="containter">
					<h2>Machted Products:</h2>
					<%= render "shared/display_Offers", leads: @leads %>	
				</div>
			</div>
		</div>	
	</div>	
</section>

