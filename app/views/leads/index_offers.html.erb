<% content_for(:title, "Offers")%>

  <div class="container">
    <div class="row justify-content-md-center">
          <div class="col col-lg-12 col-xl-10">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
            <li class="breadcrumb-item">Offers From Buyers</li>
            <li class="breadcrumb-item active" aria-current="page"><%= params[:q].first(40) %></li>
            </ol>
            </nav>
      </div>
    </div>
  </div>
  <div class="container mt-3">
  <div class="search-form">
    <div class="card">
      <div class="row">
        <div class="col-lg-9">
          <%= form_tag(products_path, method: :get) do %>
          <div class="form-group">
            <%= text_field_tag :q, nil, :class => "form-control form-control-lg", :value => params[:q] %>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Search</button>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="page-header text-center">
       <h1>Matched Offers:</h1>
  </div>
</div>
  <div id="content">
<div class="container">
    <div class="row justify-content-md-center">
          <div class="col col-lg-12 col-xl-10">
        <div class="row has-sidebar">
          <div class="col-md-4 col-lg-3">
    	  <%= form_tag(offers_path, method: :get) do %>
            <%= render "shared/lead_Filters", countries: @countries,
            	categories: @categories, query: params[:q] %>
          <% end %>
          </div>
          <div class="col-md-8 col-lg-9">
           <ul class="nav nav-tabs tab-lg" role="tablist">
             <li role="presentation" class="nav-item"> 
                <a class="nav-link active">Buyers</a>
             </li>
             <li role="presentation" class="nav-item">
                <%= link_to "Suppliers", {:controller => "leads", :action => "index_products", :q => params[:q] }, :class => "nav-link"%>  
            </li>
            </ul>
            <div class="clearfix"></div>
            <div class="item-listing list">
              <%= render "shared/display_Offers", leads: @leads %>
            </div>
          </div>
       </div>
     </div>
    </div>
   </div>
  </div>
