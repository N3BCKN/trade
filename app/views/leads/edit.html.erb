<% content_for(:title, "Edit your lead")%>
<h2>Edit Lead</h2>
<% if @lead.lead_status == "offer"%>
  <%= render "shared/offerEditForm", :lead => @lead %>
<% elsif  @lead.lead_status  == "product" %>
  <%= render "shared/productEditForm", :lead => @lead %>
  <br>
<% end %>
<br>
<%= link_to "Delete", lead_path(@lead), method: :delete, data: { confirm: 'Are you sure?' } %> 
