<% content_for(:title, "Products")%>
<div class="text-center">
	<h2>Machted Products:</h2>
	<div class="containter">
	<% @leads.each do |lead| %>
		<h2><%= link_to lead.title, lead_path(lead._id) %></h2>
		<%= set_product_image(lead) %>
		<h4>By <%= link_to lead.user.user_name, contact_path(lead.user.id) %></h4>
		<p> <%= lead.description %></p>
		<hr>
	<% end %>
	<%= paginate @leads %>
	</div>
</div>
