<% content_for(:title, "Add new offer")%>
<div id="content" class="property-single">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col col-lg-12 col-xl-8">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
            <li class="breadcrumb-item active" aria-current="page">New Buying Offer</li>
          </ol>
        </nav>
        <ul class="nav nav-tabs tab-lg" role="tablist">
           <li role="presentation" class="nav-item"> 
            <%= link_to "Product for Sale", new_product_path, :class => "nav-link"%></li>
          <li role="presentation" class="nav-item">
           <%= link_to "Buying Offer", new_offer_path, :class => "nav-link active"%></li>
        </ul>
  <div class="py-4">
    <div class="row">
      <div class="col-sm">
       <div class="page-header bordered">
            <h1 class="text-center">Add New Offer<small></small></h1>
        </div>
      <%= form_for(@lead) do |f| %>
        <div class="form-group">
          <h3 class="subheadline py-3">Title</h3>
           <%= f.text_field :title, autofocus: true, autocomplete: "Title", :class=>"form-control form-control-lg", :id=>"description" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Select Category:</h3>
           <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name') %>
          <br>
          <small id="category_helper"></small>
        </div>


        <div class="form-group">
          <h3 class="subheadline py-3">Offer Description</h3>
          <%= f.text_area :description, :class=>"form-control form-control-lg rounded-1", :id=>"description", rows: "7" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Contact Person</h3>
          <%= f.text_field :contact_person, autofocus: false, autocomplete: "contact person", :class=>"form-control form-control-lg", :id=>"contact" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Address</h3>
           <%= f.text_field :address, value: @contact.try!(:address), autocomplete: "address", :class=>"form-control form-control-lg", :id=>"address" %>

        <div class="form-group">
          <h3 class="subheadline py-3">City</h3>
            <%= f.text_field :city, value: @contact.try!(:city), autocomplete: "city", :class=>"form-control form-control-lg", :id=>"city" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Zip Code</h3>
            <%= f.text_field :zip_code, value: @contact.try!(:zip_code), autocomplete: "Zip code", :class=>"form-control form-control-lg", :id=>"zipCode" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Country</h3>
          <%= country_select("lead", "country", { selected: @contact.try!(:country) }, { class: 'form-control form-control-lg' }) %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Phone Number</h3>
          <%= f.text_field :phone_number, value: @contact.try!(:phone_number), autocomplete: "Phone Number", :class=>"form-control form-control-lg", :id=>"phone" %>
        </div>

        <div class="form-group pb-5">
          <h3 class="subheadline py-3">Home Page</h3>
          <%= f.text_field :home_page, value: @contact.try!(:home_page), autocomplete: "Home Page",:class=>"form-control form-control-lg",:id=>"home" %>
        </div>

          <%= hidden_field_tag :lead_status, "offer" %>
          <%= f.submit "Submit New Offer", :class=>"form-control btn btn-primary" %>
      <% end %>
    </div>
  </div>
      </div>
    </div>
  </div>
</div>
<script>
    $("#lead_category_id").addClass('form-control form-control-lg ui-select');  
</script>