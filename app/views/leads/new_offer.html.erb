<% content_for(:title, "Add new offer")%>
<section id="new_offer">
  <div class="container py-4">
    <div class="row">
      <div class="col-sm-8 offset-sm-2">
        <h2>Add New Offer</h2>
        <small><%= link_to "(Maybe you want to add new Product Instead?)", new_product_path %></small>
        <br><br>
        <%= form_for(@lead) do |f| %>
        <div class="form-group">
          <label for="Title">Title</label>
           <%= f.text_field :title, autofocus: true, autocomplete: "Title", :class=>"form-control", :id=>"description" %>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <%= f.text_area :description, :class=>"form-control rounded-1", :id=>"description", rows: "7" %>
        </div>

        <div class="form-group">
          <label for="contact">Contact Person</label>
          <%= f.text_field :contact_person, autofocus: false, autocomplete: "contact person", :class=>"form-control", :id=>"contact" %>
        </div>

        <div class="form-group">
          <label for="address">Address</label>
           <%= f.text_field :address, value: @contact.try!(:address), autocomplete: "address", :class=>"form-control", :id=>"address" %>

        <div class="form-group">
          <label for="city">City</label>
            <%= f.text_field :city, value: @contact.try!(:city), autocomplete: "city", :class=>"form-control", :id=>"city" %>
        </div>

        <div class="form-group">
          <label for="zipCode">Zip Code</label>
            <%= f.text_field :zip_code, value: @contact.try!(:zip_code), autocomplete: "Zip code", :class=>"form-control", :id=>"zipCode" %>
        </div>

        <div class="form-group">
          <label for="country">Country</label>
          <%= country_select("lead", "country", { selected: @contact.try!(:country) }, { class: 'form-control' }) %>
        </div>

        <div class="form-group">
          <label for="phone">Phone Number</label>
          <%= f.text_field :phone_number, value: @contact.try!(:phone_number), autocomplete: "Phone Number", :class=>"form-control", :id=>"phone" %>
        </div>

        <div class="form-group">
          <label for="homePage">Home Page</label>
          <%= f.text_field :home_page, value: @contact.try!(:home_page), autocomplete: "Home Page",:class=>"form-control",:id=>"home" %>
        </div>

        <div class="form-group">
          <label for="category">Select Category:</label>
          <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name') %>
        </div>
        <small id="category_helper"></small>
        <br>
          <%= hidden_field_tag :lead_status, "offer" %>
           <%= f.submit "Submit", :class=>"form-controll btn btn-info" %>
           <% end %>
    </div>
  </div>
</section>