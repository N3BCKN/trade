<% leads.each do |lead| %>
       <div class="item mb-3">
                <div class="row">
                  <div class="col-lg-12">
                    <div class="item-info">
                      <h3 class="item-title"><%= link_to lead.title, lead_path(lead.slug) %></h3>
                      <div class="row py-2">
                      <div class="col-md-6">
                          <div class="added-on">
                            Buyer From <%= country_name(lead.country) %> 
                            <%= flag_icon(lead.country.downcase) %> 
                          </div>
                      </div>
                      <div class="col-md-6">
                          <div class="added-by"><%=  Date.parse(lead.created_at).strftime("%B %e, %Y") %></div>
                      </div>
                      </div>
                      <div class="item-details mb-2">
                        <%= lead.description_short %>...
                      </div>
                   </div>
                  </div>
                </div>
              </div>
    <% end %>
<%= paginate leads %>

