<% content_for(:title, "Edit Offer")%>
<div id="content" class="property-single">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col col-lg-12 col-xl-8">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
            <li class="breadcrumb-item"><%= link_to "My Offers",  profile_dashboard_path%></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Offer</li>
          </ol>
        </nav>
         <div class="py-4">
          <div class="row">
            <div class="col-sm">
        <div class="page-header bordered">
            <h1 class="text-center">Edit Offer<small></small></h1>
        </div>
        <%= form_for(@lead) do |f| %>
        <div class="form-group">
          <h3 class="subheadline py-3">Title</h3>
           <%= f.text_field :title, autofocus: true, autocomplete: "Title", :class=>"form-control form-control-lg", :id=>"description" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Select Category:</h3>
           <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name') %>
          <br>
          <small id="category_helper"></small>
        </div>


        <div class="form-group">
          <h3 class="subheadline py-3">Offer Description</h3>
          <%= f.text_area :description, :class=>"form-control form-control-lg rounded-1", :id=>"description", rows: "7" %>
        </div>

        <div class="form-group">
         <h3 class="subheadline py-3">Approximate Quantity</h3>
          <%= f.text_field :quantity, :class=>"form-control form-control-lg rounded-1", :id=>"quantity" %>
        </div>

        <div class="form-group">  
         <h3 class="subheadline py-3">Required Frequency</h3>
          <%= f.select :freqency, ["Single Delivery", "Once a week", "Once a Month", "Once a year", "Several Times Per Year", "Another Way"],
         {}, { :class=>"form-control form-control-lg ui-select", :id=>"freqency"} %>
        </div>

         <div class="form-group">
         <h3 class="subheadline py-3">Destination Port or Location</h3>
          <%= f.text_field :destination, :class=>"form-control form-control-lg rounded-1", :id=>"destination" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Contact Person</h3>
          <%= f.text_field :contact_person, autofocus: false, autocomplete: "contact person", :class=>"form-control form-control-lg", :id=>"contact" %>
        </div>  

        <div class="form-group">
          <h3 class="subheadline py-3">Country:</h3>
          <%= country_select("lead", "country", { selected: @lead.try!(:country) }, { class: 'form-control form-control-lg ui-select' }) %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Phone Number</h3>
          <%= f.text_field :phone_number, autocomplete: "Phone Number", :class=>"form-control form-control-lg", :id=>"phone" %>
        </div>

         <div class="form-group">
          <h3 class="subheadline py-3">Prefered Suppliers from</h3>
          <%= f.text_field :prefered_suppliers, :class=>"form-control form-control-lg rounded-1", :id=>"prefered_suppliers" %>
        </div>
        
          <%= hidden_field_tag :lead_status, "offer" %>
          <%= f.submit "Edit Offer", :class=>"form-control btn btn-primary mt-5 my-2" %>
      <% end %>
       <%= link_to lead_path(@lead), :class=>"btn btn-danger my-5", method: :delete, data: { confirm: 'Are you sure?' } do%>
          <i class="fa fa-trash" aria-hidden="true"></i>
          Delete This Offer
          <% end %>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    $("#lead_category_id").addClass('form-control form-control-lg ui-select');  
</script>



 