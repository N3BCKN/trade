<% content_for(:title, "Edit Offer")%>
<div id="content" class="property-single">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col col-lg-12 col-xl-8">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
            <li class="breadcrumb-item"><%= link_to "My Products",  profile_dashboard_path%></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Product</li>
          </ol>
        </nav>
         <div class="py-4">
          <div class="row">
            <div class="col-sm">
        <div class="page-header bordered">
            <h1 class="text-center">Edit Product<small></small></h1>
        </div>
        <%= form_for(@lead) do |f| %>
        <div class="form-group">
          <h3 class="subheadline py-3">Title</h3>
           <%= f.text_field :title, autofocus: true, autocomplete: "Title", :class=>"form-control form-control-lg", :id=>"description" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Select Category:</h3>
          <select name="lead[category_id]" id="lead_category_id" class="form-control form-control-lg ui-select">
            <option value="1">Fuels</option>
            <option value="2">Raw Materials</option>
            <option value="3">Cosmetics / Body Care</option>
            <option value="4">Groceries / Food</option>
            <option value="5">Mechanic Devices and Parts</option>
            <option value="6">Basic Necessities</option>
            <option value="7">Electronics</option>
            <option value="8">Clothers / Textiles</option>
            <option value="9">Agriculture</option>
            <option value="10">Industrial Goods</option>
            <option value="11">Construction Materials</option>
            <option value="12">Office/Packaging Products</option>
          </select>
          <br>
          <small id="category_helper"></small>
        </div>


        <div class="form-group">
          <h3 class="subheadline py-3">Offer Description</h3>
          <%= f.text_area :description, :class=>"form-control form-control-lg rounded-1", :id=>"description", rows: "7" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Contact Person</h3>
          <%= f.text_field :contact_person, autofocus: false, autocomplete: "contact person", :class=>"form-control form-control-lg", :id=>"contact" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Address</h3>
           <%= f.text_field :address, autocomplete: "address", :class=>"form-control form-control-lg", :id=>"address" %>

        <div class="form-group">
          <h3 class="subheadline py-3">City</h3>
            <%= f.text_field :city,  autocomplete: "city", :class=>"form-control form-control-lg", :id=>"city" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Zip Code</h3>
            <%= f.text_field :zip_code,  autocomplete: "Zip code", :class=>"form-control form-control-lg", :id=>"zipCode" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Country</h3>
          <%= country_select("lead", "country", { selected: @lead.country }, { class: 'form-control form-control-lg ui-select' }) %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Phone Number</h3>
          <%= f.text_field :phone_number,  autocomplete: "Phone Number", :class=>"form-control form-control-lg", :id=>"phone" %>
        </div>

        <div class="form-group">
          <h3 class="subheadline py-3">Home Page</h3>
          <%= f.text_field :home_page, autocomplete: "Home Page",:class=>"form-control form-control-lg",:id=>"home" %>
        </div>

          <div class="form-group pb-5">
                <h3 class="subheadline py-3">Change Image:</h3>
                <div class="ui-dropzone">
                  <img class="img-fluid" id="img_prev">
                  <i class="fa fa-5x fa-upload"></i>
                  <div>Drag and drop product image or click to upload</div>
                  <%= f.file_field :product_image, :class=>"form-control form-control-lg", :onChange=>"readURL(this,'100%','100%')", :id=>"gallery" %>
                </div>
        </div>

          <%= hidden_field_tag :lead_status, "product" %>
          <%= f.submit "Edit Product", :class=>"btn btn-primary btn-block" %>
      <% end %>
       <%= link_to lead_path(@lead), :class=>"btn btn-danger my-5", method: :delete, data: { confirm: 'Are you sure?' } do%>
          <i class="fa fa-trash" aria-hidden="true"></i>
          Delete This Product
          <% end %>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



 