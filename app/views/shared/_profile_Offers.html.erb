<div class="clearfix"></div>
<div class="item-listing list">
<% leads.each do |lead| %>
       <div class="item mb-3">
                <div class="row">
                  <div class="col-lg-12">
                  <div class="item-info">
                    <h3 class="item-title"><%= link_to lead.title, lead_path(lead) %></h3>
                    <div class="item-details mb-2">
                      <%= lead.description_short %>...
                    </div>
                 </div>
                    <div class="row">
                    <div class="col-md-6">
                        <div class="added-on"><%= link_to "Edit Offer", edit_lead_path(lead) %> </div>
                    </div>
                    <div class="col-md-6">
                        <div class="added-by"><%=  lead.created_at.strftime("%B %e, %Y") %></div>
                    </div>
                    </div>
                  </div>
                </div>
              </div>
              <br>
              <hr>
              <br><br>
    <% end %>
<%= paginate leads %>






