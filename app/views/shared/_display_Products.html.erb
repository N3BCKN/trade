<% leads.each do |lead| %>
	 <div class="card">
        <div class="row no-gutters">
            <div class="col-auto">
                <img src="//placehold.it/200" class="img-fluid" alt="">
            </div>
            <div class="col">
                <div class="card-block px-3 py-2">
                    <h4 class="card-title"><%= link_to lead.title, lead_path(lead._id) %></h4>
                    <p class="card-text"><%= lead.description_short %>...</p>
                </div>
            </div>
        </div>
        <div class="card-footer w-100 text-muted">
           Seller from: <%= country_name(lead.country) %> 
           <span class="float-right">Added <%=  time_ago_in_words(lead.created_at) %> ago </span>
        </div>
    </div>
	<% end %>
	<%= paginate leads %>
</div>


