<div id="sidebar" class="sidebar-left">
    <div class="sidebar_inner">
      <div class="list-group no-border list-unstyled">
        <span class="list-group-item heading">Manage Leads</span>
            <%= link_to new_product_path, 
                :class => "list-group-item" do %>
            <i class="fa fa-fw fa-plus-square-o"></i> Add New Lead
            <% end %>
            <%= link_to profile_products_path, 
                :class => "#{params[:action] == 'show_products' ?  'active' : ''}
            list-group-item d-flex justify-content-between align-items-center " do %>
              <span><i class="fa fa-fw fa-truck"></i> My Products</span>
              <span class="badge badge-primary badge-pill"><%= @products || 0 %></span>
            <% end %>
            <%= link_to profile_offers_path, 
                :class => "#{params[:action] == 'show_offers' ?  'active' : ''}
            list-group-item d-flex justify-content-between align-items-center " do %>
              <span><i class="fa fa-fw fa-ship"></i> My Offers</span>
              <span class="badge badge-primary badge-pill"><%= @offers || 0 %></span>
            <% end %>
            <%= link_to profile_favorites_path, 
                :class => "#{params[:action] == 'show_favorites' ?  'active' : ''}
            list-group-item d-flex justify-content-between align-items-center " do %>
              <span><i class="fa fa-heart-o"></i> Favorite Leads</span>
              <span class="badge badge-primary badge-pill"><%= current_user.favorite_leads.count %></span>
            <% end %>
            <%= link_to profile_messages_path, 
                :class => "#{params[:action] == 'show_messages' ?  'active' : ''}
            list-group-item d-flex justify-content-between align-items-center " do %>
              <span><i class="fa fa-envelope"></i> Messages Sent</span>
              <span class="badge badge-primary badge-pill"><%= current_user.messages_sent.count %></span>
            <% end %>

        <span class="list-group-item heading">Manage Account</span>
           <%= link_to profile_dashboard_path, 
              :class => "#{params[:action] == 'show_profile' ?  'active' : ''} 
           list-group-item" do %>
           <i class="fa fa-fw fa-pencil"></i> My Profile
           <% end %>
           <%= link_to edit_contact_path(current_user.contact), 
              :class => "#{params[:action] == 'edit' && params[:controller] == 'contacts' ?  'active' : ''} list-group-item" do %>
           <i class="fa fa-fw fa-building-o"></i> Company Informations
           <% end %>
           <%= link_to edit_user_registration_path, 
              :class => " #{params[:controller] == 'devise/registrations' ?  'active' : ''} list-group-item" do %>
           <i class="fa fa-fw fa-lock"></i> Change Password
           <% end %>
           <%= link_to profile_membership_path, 
              :class => "#{params[:action] == 'profile_membership' ?  'active' : ''} list-group-item" do %>
           <i class="fa fa-fw fa-star"></i> Membership Status
           <% end %>
           <%= link_to edit_contact_path(current_user.contact), 
              :class => "list-group-item" do %>
           <i class="fa fa-fw fa-credit-card"></i> Payments
           <% end %>
           <%= link_to edit_contact_path(current_user.contact), 
              :class => "list-group-item" do %>
           <i class="fa fa-fw fa-cog"></i> Account
           <% end %>
      </div>    
    </div>
</div>