 <div class="clearfix"></div>
<div class="item-listing list">
<% leads.each do |lead| %>
       <div class="item mb-5">
                <div class="row">
                  <div class="col-lg-5">
                    <div class="item-image">
                        <%= link_to lead_path(lead) do %>
                        <img src="//placehold.it/300x220" class="img-fluid" alt="">
                        <% end %>
                    </div>
                  </div>
                  <div class="col-lg-7">
                  <div class="item-info">
                    <h3 class="item-title"><%= link_to lead.title, lead_path(lead) %></h3>
                    <div class="item-details mb-2">
                      <%= lead.description_short.first(100) %>...
                    </div>
                 </div>
                    <div class="row">
                    <div class="col-md-6">
                        <div class="added-on"><%= link_to "Edit Product", edit_lead_path(lead) %>  </div>
                    </div>
                    <div class="col-md-6">
                        <div class="added-by"><%=  lead.created_at.strftime("%B %e, %Y") %></div>
                    </div>
                    </div>
                  </div>
                </div>
              </div>
    <% end %>
<%= paginate leads %>
</div>

